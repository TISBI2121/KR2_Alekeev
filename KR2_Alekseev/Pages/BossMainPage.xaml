<Page x:Class="KR2_Alekseev.Pages.BossMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KR2_Alekseev.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BossMainPage">

    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button x:Name="BDistribution"
                    Content="Distribution"
                    Click="BDistribution_Click"/>
            <Button x:Name="BHiring"
                    Content="Hiring"
                    Click="BHiring_Click"/>
            <Button x:Name="ListEmployees"
                    Content="List of employees"
                    Click="ListEmployees_Click"/>
            
        </StackPanel>
        <Frame x:Name="BossFrame"
               NavigationUIVisibility="Hidden"
               Grid.Column="1"/>

    </Grid>
</Page>
