<Page x:Class="KR2_Alekseev.Pages.EmployeeMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KR2_Alekseev.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeeMainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button x:Name="BOrder"
                    Content="Order"
                    Click="BOrder_Click"/>
            <Button x:Name="BProfile"
                    Content="Profile"
                    Click="BProfile_Click"/>
            <Button x:Name="BHelp"
                    Content="Помоги!"
                    Click="BHelp_Click"/>


        </StackPanel>
        <Frame x:Name="EmployeeFrame"
               NavigationUIVisibility="Hidden"
               Grid.Column="1"/>
    </Grid>
</Page>
